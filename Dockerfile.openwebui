FROM python:3.11-slim

WORKDIR /app

# Install minimal build deps for some packages
RUN apt-get update \
    && apt-get install -y --no-install-recommends gcc build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install runtime Python deps
RUN pip install --no-cache-dir \
    fastapi[all] uvicorn[standard] requests \
    langchain openai qdrant-client crewai || true

# Copy repository into image so local modules (agents, vector_search, etc.) are available
COPY . /app

ENV PYTHONPATH=/app

EXPOSE 8002

CMD ["uvicorn", "openwebui_integration.query_listener:app", "--host", "0.0.0.0", "--port", "8002"]
