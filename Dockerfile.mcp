FROM python:3.11-slim

WORKDIR /app

# Install minimal build deps for some packages
RUN apt-get update \
    && apt-get install -y --no-install-recommends gcc build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install runtime Python deps reliably
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt \
    && pip install --no-cache-dir uvicorn[standard]

# Copy repository into image so local modules (agents, vector_search, etc.) are available
COPY . /app

ENV PYTHONPATH=/app

EXPOSE 8001

CMD ["uvicorn", "mcp.mcp:app", "--host", "0.0.0.0", "--port", "8001"]
